        function saveSupplierInvoice() {
            var date = $("#date").val();
            var description = $("#description").val();
            var qty = $("#qty").val();
            var vatAmount = $("#vatAmount").val();
            var amount = $("#amount").val();
            var vatAccountId = $("#selectedVatAccount").val();
            var invoiceAccountId = $("#selectedInvoiceAccount").val();
            var productId = $("#selectedProduct").val();
            var file = $('#supplierInvoiceFile').attr("src");
            var fileName = $('#supplierInvoiceFileName').text();

            if (date == '') {
                toastr.error('Please provide the date of invoice');
                return;
            }

            if (description == '') {
                toastr.error('Please provide the description of the invoice');
                return;
            }

            if (qty == '') {
                toastr.error('Please provide the quantity of the product');
                return;
            }

            if (amount == '') {
                toastr.error('Please provide the Total Invoice Amount');
                return;
            }

            if (vatAmount == '') {
                toastr.error('Please provide the Invoice Vat Amount');
                return;
            }

            if (vatAccountId == -100) {
                toastr.error('Please provide the Invoice Vat Account Id');
                return;
            }

            if (invoiceAccountId == -100) {
                toastr.error('Please provide the Invoice Account');
                return;
            }

            if (productId == -100) {
                toastr.error('Please select a product');
                return;
            }

            if (file == '' || file == undefined || file == null) {
                toastr.error('Please choose a file');
                return;
            }

            var data = {
                Date: date,
                Description: description,
                Qty: qty,
                Amount: amount,
                VatAmount: vatAmount,
                VatAccountId: vatAccountId,
                InvoiceAccountId: invoiceAccountId,
                ProductId: productId,
                File: file,
                Filename: fileName,
                SupplierId: _supplierId
            }

            var url = `/api/Inventory/SaveSupplierInvoice`;

            SafriSoftPostRequest(url, data, (response) => {
                if (response.Success == true) {
                    toastr.success(response.Message);
                    $('#supplierInvoices').modal('hide');
                    setTimeout(function () {
                        viewSupplierInvoices(_supplierId);
                    }, 1000);
                } else {
                    toastr.error(response.Message);
                }
            });
        }

