                    ],
                    datasets: [
                        {
                            data: [data.StockAvailable, data.StockSold],
                            backgroundColor: ['rgba(60,141,188,1)', 'lightblue' ],
                        }
                    ]
                }

                //-------------
                //- PIE CHART -
