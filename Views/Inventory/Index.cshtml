                $("#stock-sold-count").text(data.StockSold);
                $("#orders-processed").text(data.OrdersProcessed);
                $("#orders-packaged").text(data.OrdersPackaged);
                $("#orders-intransit").text(data.OrdersInTransit);
                $("#orders-delivered").text(data.OrdersDelivered);
                $("#stock-sold-value").text(new Intl.NumberFormat('en-ZA', { style: 'currency', currency: 'ZAR' }).format(data.RandValueSold));

                donutData = {
                    labels: [
                        'Products Available',
